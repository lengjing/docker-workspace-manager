{
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "ES2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": false,
    "esModuleInterop": true,
    "declaration": true,
    "skipLibCheck": true
  },
  "exclude": ["**/dist", "**/node_modules", "pkgs", "tools"]
}